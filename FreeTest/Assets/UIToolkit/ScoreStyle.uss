#ScoreContainer {
    position: absolute;
    top: 20px;
    left: 50%;
    transform: translate(-50%, 0);
    flex-direction: row;
    padding: 10px;
    background-color: rgba(0, 0, 0, 0.7);
    border-radius: 5px;
}

#ScoreLabel, #ScoreValue {
    font-size: 24px;
    color: yellow;
    margin: 0 5px;
}
